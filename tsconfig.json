{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "module": "esnext",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
